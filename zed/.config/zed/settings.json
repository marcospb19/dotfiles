// https://zed.dev/docs/configuring-zed
{
  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "Plain Text": {
      "show_inline_completions": false
    },
    "Markdown": {
      "show_inline_completions": false
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false, // todo see what auto signature help does for me when calling a function
    "selections_menu": false
  },
  "features": {
    "inline_completion_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet-latest",
      "provider": "zed.dev"
    },
    "version": "2"
  },
  // broken for now
  "soft_wrap": "none",
  // "soft_wrap": "editor_width",
  "show_inline_completions": true,
  "base_keymap": "SublimeText",
  "theme": "Catppuccin Frapp√©",
  "current_line_highlight": "all",
  "ui_font_size": 21,
  "buffer_font_size": 18.5,
  "buffer_font_family": "Victor Mono",
  "buffer_font_weight": 600,
  "git": {
    "gutter_debounce": 50,
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "git_status": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "allTargets": false,
          "overrideCommand": ["cargo", "build", "--message-format=json"]
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
        // "checkOnSave": {
        //     "allTargets": false
        // },
        // "completion": {
        //     "fullFunctionSignatures": { "enable": true }
        // }
      }
    }
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "indent_guides": {
    "coloring": "indent_aware"
    // "background_coloring": "indent_aware",
  },
  "preview": {
    "experimental.theme_overrides": {
      "title_bar.background": "#222235aa",
      "title_bar.inactive_background": "#222235"
    }
  },
  "stable": {
    "experimental.theme_overrides": {
      "title_bar.background": "#383522aa",
      "title_bar.inactive_background": "#383522"
    }
  }
}
