{
  "ui_font_size": 18.0,
  "buffer_font_size": 20.0,
  "buffer_font_weight": 500,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true, // todo see what auto signature help does for me when calling a function
    "selections_menu": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Macchiato",
  "project_panel": {
    "dock": "right"
  },
  "edit_predictions": {
    "mode": "auto"
  },
  "languages": {
    "Plain Text": {
      "show_edit_predictions": false
    },
    "Markdown": {
      "show_edit_predictions": true
    }
  },
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet-latest",
      "provider": "zed.dev"
    },
    "version": "2"
  },
  "buffer_font_family": "Iosevka",
  "soft_wrap": "editor_width",
  "base_keymap": "SublimeText",
  "theme": "Catppuccin Macchiato - No Italics",
  "current_line_highlight": "all",
  "git": {
    "gutter_debounce": 25,
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "git_status": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "overrideCommand": ["cargo", "build", "--message-format=json"]
          // "overrideCommand": [
          //   "cargo",
          //   "check",
          //   "--message-format=json",
          //   "--tests",
          //   "-p",
          //   "editor"
          // ]
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        },
        "completion": {
          "fullFunctionSignatures": { "enable": true }
        }
      }
    }
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "indent_guides": {
    "coloring": "indent_aware"
    // "background_coloring": "indent_aware", // todo fix
  },
  "preview": {
    "experimental.theme_overrides": {
      "title_bar.background": "#222235aa",
      "title_bar.inactive_background": "#222235"
    }
  },
  "stable": {
    "experimental.theme_overrides": {
      "title_bar.background": "#383522aa",
      "title_bar.inactive_background": "#383522"
    }
  }
}
