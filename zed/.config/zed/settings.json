// https://zed.dev/docs/configuring-zed
{
  "project_panel": {
    "dock": "right"
  },
  "features": {
    "inline_completion_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "show_inline_completions": true,
  "base_keymap": "SublimeText",
  "theme": "One Dark",
  "current_line_highlight": "all",
  "ui_font_size": 20,
  "buffer_font_size": 22.0,
  "buffer_font_family": "Victor Mono",
  "buffer_font_weight": 820,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "git_status": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  // "languages": {
  //   "TOML": {
  //     "format_on_save": "off"
  //   }
  // }
  //
  "preview": {
    "experimental.theme_overrides": {
      "title_bar.background": "#222235aa",
      "title_bar.inactive_background": "#222235"
    }
  },
  "stable": {
    "experimental.theme_overrides": {
      "title_bar.background": "#383522aa",
      "title_bar.inactive_background": "#383522"
    }
  }
}
