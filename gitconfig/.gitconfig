	helper = !/home/joao/.cargo/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/home/joao/.cargo/bin/gh auth git-credential
[init]
	defaultBranch = main
[diff]
        tool = difftastic
[difftool]
        prompt = false
[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
# Use a pager for large output, just like other git commands.
[pager]
        difftool = true
# `git dif` is less to type than `git difftool`.
[alias]
        dif = difftool
