# nvim
alias vim="nvim"

# Substitute " " for "\ "
# Very nice alias to ignore whitespace problems when working with file paths
alias fix-whitespace='sed "s/\ /\\\ /g"'
# I made this when i didn't knew about SH double quotes preventing string splits

# e.g.: $(locate ...) || $(ls ...)

# ls aliases
alias ls='ls --color=auto --group-directories-first -F'
alias l='ls'
alias la='l -A'
alias lA='l -a'
alias ll='l -l'
alias lla='ll -A'
alias llA='l -a'

# Git aliases
alias lol="git log --all --graph --oneline --decorate"
alias dif='git dif'

# Goodie
alias please="sudo"

# Weather information on my city
alias weather="curl -s wttr.in/Natal"

# Disown all apps
alias disall="bg ; disown ; exit"

# Update output
alias ix='curl -F "f:1=<-" ix.io'

alias rs="cargo +nightly -Zscript"
alias rsi="evcxr"
alias pyi="ipython"
alias ipy="ipython"

alias whiteboard="lorien"
alias nixfmt="alejandra"
alias resolve='/opt/resolve/bin/resolve'
alias dragon='dragon-drop'
