; CPU percentage
[module/cpu]
type = internal/cpu
interval = 1.7
label-underline = #87f0ae


; RAM percentage
[module/memory]
type = internal/memory
interval = 2.3
label-underline = #ffb780


; Current date
[module/date]
type = internal/date
interval = 1
label = " %date% %time% "
label-underline = #ff8899
date = %x
time = %I:%M %p
date-alt = %A, %d %B, %Y,
time-alt = %I:%M:%S %p


; Custom script that shows battery percentage if low
[module/batteryscript]
type = custom/script
interval = 50
exec = dash ~/.config/polybar/batteryscript.sh
label-underline = #6bf


; Custom script that shows volume percentage
[module/volumescript]
type = custom/script
tail = true
exec = echo .config/polybar/lock | entr dash ~/.config/polybar/volumescript.sh
label-underline = #b28dff


; Custom script that shows volume percentage
[module/volumeismutedscript]
type = custom/script
tail = true
exec = echo .config/polybar/lock | entr dash ~/.config/polybar/volumeismutedscript.sh
label-background = #504540
label-underline = #866
label-foreground = #ffb0b0
;
