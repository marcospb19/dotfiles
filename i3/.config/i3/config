# exec_always --no-startup-id picom

# Super key
set $mod Mod4
# Alt key
set $alt Mod1
# Enter key
set $enter Return

# # Very specific, problem with my keyboard
bindsym $mod+o exec --no-startup-id setxkbmap br abnt2
exec --no-startup-id setxkbmap br abnt2

# # Gaps
gaps inner 12
gaps outer 0

# Mmmmmmm
smart_gaps on
smart_borders on
hide_edge_borders on

# # Polybar and multiple monitor management
# Startup
exec --no-startup-id \
	[ $(xrandr -q | grep -E '(HDMI|eDP)' | wc -l) = 2 ] && ~/.screenlayout/external.sh \
	; ~/.config/polybar/launch.sh \
	; feh --bg-fill .wall --no-fehbg
# Restart
bindsym $mod+Shift+p exec --no-startup-id ./.config/polybar/launch.sh
# Hide bar
bindsym $mod+m exec --no-startup-id polybar-msg cmd toggle

# Cycle workspaces
bindsym $mod+Tab       workspace next
bindsym $mod+Shift+Tab workspace prev

# Cycle windows
bindsym $alt+Tab       focus right
bindsym $alt+Shift+Tab focus left

###################################################################################

set $mode_system (E)xit, (S)uspend, (R)eboot, (Shift+S)hutdown
bindsym $mod+Shift+l mode "  $mode_system  "
mode "  $mode_system  " {
    bindsym e exec --no-startup-id i3-msg exit                    , mode "default"
    bindsym s exec --no-startup-id sudo systemctl suspend         , mode "default"
    bindsym r exec --no-startup-id sudo systemctl reboot          , mode "default"
    bindsym Shift+s exec --no-startup-id sudo systemctl poweroff  , mode "default"
    bindsym Escape mode "default"
}


###################################################################################

# Betterlockscreen
exec --no-startup-id betterlockscreen -l
bindsym $mod+l exec --no-startup-id betterlockscreen -l dimblur

# # Screenshot shit
exec --no-startup-id xfce4-clipman
bindsym Print exec --no-startup-id deepin-screenshot
bindsym Shift+Print exec --no-startup-id scrot

font pango:victor mono 2
# Font pango:Noto Sans 2

# # NetworkManager and nm-applet
exec --no-startup-id nm-applet

# # Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && echo 1 > .config/polybar/lock
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && echo 1 > .config/polybar/lock
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && echo 1 > .config/polybar/lock
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# # Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# # Start a terminal
bindsym $mod+$enter exec termite
# bindsym $mod+$enter exec termite --custom-config ~/.config/termite/custom & sleep 0.1 && \
# 	python ~/termite-themes/termite-themes.py --random --copy ~/.config/termite/colors --force

# # Kill focused window
bindsym $mod+q kill

# # Start dmenu program launcher
# Bindsym $mod+d exec dmenu_run
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split in horizontal orientation
bindsym $mod+h split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# # Change container layout (stacked, tabbed, toggle split)
# Bindsym $mod+s layout stacking # Useless
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
bindsym $mod+apostrophe workspace number $ws0
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+apostrophe move container to workspace number $ws0
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Shift+c reload
# Restart i3 inplace
bindsym $mod+Shift+r exec --no-startup-id feh --bg-fill .wall --no-fehbg && i3-msg restart && ~/.config/polybar/launch.sh
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+r mode "resize"
mode "resize" {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
        bindsym $enter mode "default"
}

new_window pixel 4

# Theme colors
# Class                   border  backgr. text    indic.   child_border
client.focused          #777777 #a78777 #777777 #FDF6E3
#client.focused          #ff8395 #ff8395 #ff8395 #FDF6E3
client.focused_inactive #2F3D44 #2F3D44 #2F3D44 #454948
client.unfocused        #694D54 #2F3D44 #2F3D44 #454948
client.urgent           #ee3300 #ee3300 #ee3300 #268BD2

# # Key bindings for managing multiple monitors:
#
# Laptop main screen
bindsym $mod+F1 exec --no-startup-id ~/.screenlayout/laptop.sh
# Dual monitor setup
bindsym $mod+F2 exec --no-startup-id ~/.screenlayout/dual.sh
# External monitor
bindsym $mod+F3 exec --no-startup-id ~/.screenlayout/external.sh
# Move workspace to other monitor
bindsym $mod+Shift+$enter move workspace to output right


bindsym $mod+g exec --no-startup-id "if [ `i3-msg -t get_tree | grep -Po \
    '.*\\"gaps\\":{\\"inner\\":\K(-|)[0-9]+(?=.*\\"focused\\":true)'` -eq 0 ]; then \
        i3-msg gaps inner current set 0; \
    else \
        i3-msg gaps inner current set 12; \
    fi"
